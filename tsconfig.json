{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "target": "es5",
    "alwaysStrict": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "build/*",
    "__mock__"
  ],
  "include": [
    "./src/*",
    "**/*.ts",
    "**/*.tsx",
    "**/*.jsx",
    "i18n/index.js"
  ]
}
